!!!
%html{:lang => "en"}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    / Meta, title, CSS, favicons, etc.
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %title Sasti Sawari

    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
    = favicon_link_tag 'favicon.ico'
  %body.nav-md
    .container.body
      .main_container
        .col-md-3.left_col
          .left_col.scroll-view{style: 'border: 1px solid;'}
            .navbar.nav_title{:style => "border: 0;"}
              %a.site_title{:href => "index.html"}
                %i.fa.fa-paw
                %span Sasti Sawari!
            .clearfix
            .profile.clearfix
              .profile_pic
                %img.img-circle.profile_img{:alt => "...", :src => "/assets/default.png"}/
              .profile_info
                %span Welcome,
                %h2
                  = "#{current_user.first_name}  #{current_user.last_name}"
            %br/
            #sidebar-menu.main_menu_side.hidden-print.main_menu
              .menu_section
                %h3 General
                %ul.nav.side-menu
                  %li
                    = link_to 'Users', users_path, class: 'fa fa-home'
                  %li
                    = link_to 'Menu', users_path, class: 'fa fa-desktop'
                  %li
                    = link_to 'Menu', users_path, class: 'fa fa-table'
                  %li
                    = link_to 'Menu', users_path, class: 'fa fa-bar-chart-o'
        / top navigation
        .top_nav
          .nav_menu
            %nav
              .nav.toggle
                %a#menu_toggle
                  %i.fa.fa-bars
              %ul.nav.navbar-nav.navbar-right
                %li
                  %a.user-profile.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "javascript:;"}
                    %img{:alt => "", :src => "/assets/default.png"}>/
                    #{current_user.first_name}  #{current_user.last_name}
                    %span.fa.fa-angle-down
                  %ul.dropdown-menu.dropdown-usermenu.pull-right
                    %li
                      %a{:href => "javascript:;"} Profile
                    %li
                      %a{:href => "javascript:;"}
                        %span.badge.bg-red.pull-right 50%
                        %span Settings
                    %li
                      %a{:href => "javascript:;"} Help
                    %li
                      = link_to 'Logout', destroy_user_session_path , method: :delete, class: 'fa fa-sign-out pull-right'
        //top navigation
        / page content
        .right_col{:role => "main", style: 'min-height: 50%;'}
          / top tiles
          %div{style: 'margin-top: 7%;'}
            = render 'layouts/messages'
            = yield
          / /top tiles
          %br/


        / end of weather widget
        / /page content
        / footer content
        -#%footer
        -#  .pull-right
        -#    Gentelella - Bootstrap Admin Template by
        -#    %a{:href => "https://colorlib.com"} Colorlib
        -#  .clearfix
        -#    / /footer content
